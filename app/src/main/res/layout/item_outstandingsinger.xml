<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="outStandingSinger"
            type="com.example.recyclerviewpool.model.itemdata.ItemCategories" />
    </data>

    <LinearLayout
        android:layout_marginRight="@dimen/marginLeftItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            loadImg="@{outStandingSinger.imgCategory}"
            android:layout_width="@dimen/size_circle"
            android:layout_height="@dimen/size_circle" />

        <TextView
           loadText="@{outStandingSinger.nameCategory}"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />


    </LinearLayout>
</layout>